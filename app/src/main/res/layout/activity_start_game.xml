<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Activities.StartGameActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/android_hangman_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:context=".activities.Activities.StartGameActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="casual"
            android:text="HANGMAN"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:textColor="?attr/colorBackgroundFloating"
            android:textFontWeight="0.7"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_choose_category"
            style="@android:style/Widget.Holo.Button.Inset"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_category"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-188dp"
            android:alpha="0.9"
            android:text="Choose category"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="?attr/actionModeSplitBackground"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_category"
            android:layout_width="257dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="198dp"
            android:background="@android:color/darker_gray"
            android:fadingEdge="horizontal|vertical"
            android:textAppearance="@android:style/TextAppearance.Holo.Widget.PopupMenu.Large"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_play"
            style="@android:style/Widget.Holo.Button.Inset"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="204dp"
            android:alpha="0.9"
            android:text="PLAY"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="?attr/actionModeSplitBackground"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>